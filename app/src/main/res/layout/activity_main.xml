<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0C0C0C"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/white"
            android:onClick="funcButton"
            android:textSize="60sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/AC"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@drawable/designbutton2"
            android:onClick="funcButton"
            android:text="AC" />

        <Button
            android:id="@+id/Plus_or_Minus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@drawable/designbutton2"
            android:onClick="funcButton"
            android:text="+/-" />

        <Button
            android:id="@+id/Present"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@drawable/designbutton2"
            android:onClick="funcButton"
            android:text="%" />

        <Button
            android:id="@+id/Split"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@drawable/designbutton"
            android:onClick="funcButton"
            android:text="/" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/Seven"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@drawable/designbutton3"
            android:onClick="funcButton"
            android:text="7"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/Eight"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@drawable/designbutton3"
            android:onClick="funcButton"
            android:text="8"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/Nine"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@drawable/designbutton3"
            android:onClick="funcButton"
            android:text="9"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/Double"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@drawable/designbutton"
            android:onClick="funcButton"
            android:text="X" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/Four"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@drawable/designbutton3"
            android:onClick="funcButton"
            android:text="4"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/Five"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@drawable/designbutton3"
            android:onClick="funcButton"
            android:text="5"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/Six"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@drawable/designbutton3"
            android:onClick="funcButton"
            android:text="6"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/Minus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@drawable/designbutton"
            android:onClick="funcButton"
            android:text="-" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/One"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@drawable/designbutton3"
            android:onClick="funcButton"
            android:text="1"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/Two"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@drawable/designbutton3"
            android:onClick="funcButton"
            android:text="2"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/Three"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@drawable/designbutton3"
            android:onClick="funcButton"
            android:text="3"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/Plus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@drawable/designbutton"
            android:onClick="funcButton"
            android:text="+" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/Zero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/designbutton3"
            android:onClick="funcButton"
            android:text="0"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/Dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/designbutton3"
            android:onClick="funcButton"
            android:text="."
            android:textColor="@color/white" />

        <Button
            android:id="@+id/Equal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/designbutton"
            android:onClick="funcButton"
            android:text="=" />
    </LinearLayout>

</LinearLayout>